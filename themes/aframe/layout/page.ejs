<% if (page.type) { %>
  <%- partial('partials/sidebar_generic', {type: page.type, index: page.index, sidebar_layout: page.sidebar_layout}) %>
<% } %>
<div class="content content--<%- page.type %> copy">
  <div class="copy__wrap">
    <h1 class="page__title"><%- page.title %><%= page.type === 'examples' ? ' Example' : '' %></h1>
    <%- page.content %>
    <% if (page.type === 'guide') { %>
      <div class="guide-links">
        <% site.pages.find({type: page.type, order: page.order - 1}).each(function (page) { %>
          <span>← <a href="<%- page_url(page.path) %>"><%= page.title %></a></span>
        <% }) %>
        <% site.pages.find({type: page.type, order: page.order + 1}).each(function (page) { %>
          <span class="float-right"><a href="<%- page_url(page.path) %>"><%= page.title %></a> →</span>
        <% }) %>
      </div>
    <% } %>
    <footer class="footer">
      <p>Caught a mistake or want to contribute to the documentation? &nbsp; <a href="http://github.com/aframevr/aframe-site-dev/blob/master/src/<%- page.path.replace(/\.html$/, '.md') %>" target="_blank">Fork this page on GitHub</a></p>
    </footer>
  </div>
</div>
