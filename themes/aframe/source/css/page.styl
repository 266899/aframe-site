@import "_common"
@import "_blog"

$header-height = 40px

ul
    list-style-type none
    margin 0
    padding 0
    line-height 1.5

.nav
    border-bottom 1px dashed rgba(0,0,0,0.1)
    margin-bottom 10px
    padding 10px 0

.nav-item
    font-family gt_cinetype_mono
    + .nav-item
        margin-top 5px

.nav-link
    display block
    padding-bottom 4px
    text-transform uppercase
    span
        border 3px solid transparent
        color rgba(0,0,0,0.35)
        display inline-block
        margin -2px -4px
        padding 2px 4px
        transition 0.1s background ease-in, 0.1s color ease-in
    &:hover span, &.current span
        background rgba(255,255,255,.5)
        // border-color white
        // border-color rgba(0,0,0,0.5)
        color rgba(0,0,0,0.5)
    &:active span
        background rgba(0,0,0,0.25)
        color rgba(0,0,0,0.75)
    &.current span
        background rgba(0,0,0,.75)
        color #fff
        font-weight 600

.logo__wordmark
    color #fff
    display inline-block
    // font-family ApercuRegular
    font-family gt_cinetype_bold
    font-size 64px
    text-transform uppercase

.mobile-bar
    position fixed
    top 0
    left 0
    width 100%
    height 40px
    background-color #fff
    z-index 9
    display none
    box-shadow 0 0 4px rgba(0,0,0,.25)
    .menu-button
        position absolute
        width 24px
        height 24px
        top 8px
        left 12px
        background url(../images/menu.png) center center no-repeat
        background-size 24px
    .logo
        position absolute
        width 30px
        height 30px
        background url(../images/logo.png) center center no-repeat
        top 5px
        left 50%
        margin-left -15px
        background-size 30px

.sidebar
    -webkit-overflow-scrolling touch
    -ms-overflow-style none
    &::-webkit-scrollbar
        width: 0 !important
    h2
        margin-top .2em
    .version-select
        vertical-align middle
        margin-left 5px
    .menu-root
        padding-left 0
    .menu-sub
        font-size .85em

.sidebar-link
    color #fff
    border-bottom 2px solid transparent
    display block
    &:hover
        .sidebar-link-text
            border-bottom 2px solid rgba(0,0,0,0.25)
    &.current
        color #333
        font-weight 600
        .sidebar-link-text
            background-color rgba(255,255,255,0.25)
        &:hover
            .sidebar-link-text
                border-bottom-color transparent
    &.new
        &:after
            content "NEW"
            display inline-block
            font-size 10px
            font-weight 600
            color #fff
            background-color $green
            line-height 14px
            padding 0 4px
            border-radius 3px
            margin-left 5px
            vertical-align middle
            position relative
            top -1px


.section-link
    &.active
        font-weight bold
        color $green

.main-menu
    margin-bottom 20px
    display none
    padding-left 0

.copy
    a.button
        font-size .9em
        color #fff
        margin .2em 0
        width 180px
        text-align center
        padding 12px 24px
        display inline-block
        vertical-align middle
    img
        max-width 100%
    span.light
        color $light
    span.info
        font-size .85em
        display inline-block
        vertical-align middle
        width 280px
        margin-left 20px
    h1
        margin 0 0 1em
    h2
        margin 2em 0 .8em
        padding-bottom .7em
        border-bottom 1px solid $border
    h3
        margin 3em 0 1.2em
        position relative
        &:before
            content "#"
            color $green
            position absolute
            left -0.7em
            top -2px
            font-size 1.2em
            font-weight bold
    figure, p, ul, ol
        margin 1.2em 0
    p, ul, ol
        line-height 1.6em
    ul, ol
        padding-left 1.5em
    a
        color $green
        font-weight 600
    blockquote
        margin 2em 0
        padding-left 20px
        border-left 4px solid $green
        p
            font-weight 600
            margin-left 0
    iframe
        margin 1em 0
    p.tip
        padding 12px 24px 12px 30px
        margin 2em 0
        border-left 4px solid $red
        background-color $codebg
        position relative
        border-bottom-right-radius $radius
        border-top-right-radius $radius
        &:before
            position absolute
            top 14px
            left -12px
            background-color $red
            color #fff
            content "!"
            width 20px
            height 20px
            border-radius 100%
            text-align center
            line-height 20px
            font-weight bold
            font-family $logo-font
            font-size 14px

.guide-links
    margin-top 2em
    height 1em

.float-right
     float right

.slogan
    // color #333
    color $white
    font-family gt_cinetype_light
    font-size 5em
    font-weight 200
    line-height 0.9
    position absolute
    text-transform uppercase
    top 30px
    left 30px
    z-index 2
    width 450px

.example__iframe
    height 100vh
    width 100%

.sidebar, .content
    overflow-y auto
    position relative

.sidebar
    background rgb(239,45,94)
    flex 1
    padding 30px

.content
    flex 3

@media screen and (max-width: 800px)
    .main
        flex-direction column

.section__title
    color rgba(0,0,0,0.35)
    font-family gt_cinetype_mono
    line-height 1.2
    margin 0
ul + .section__title
    margin-top 20px
