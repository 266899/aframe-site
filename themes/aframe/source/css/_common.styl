@import "_settings"
@import "_syntax"
@import "_fonts"

*
    margin 0
    padding 0
    box-sizing border-box

html, body
    height 100%

body
    font-family $body-font
    font-size $body-font-size
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    color $medium

a
    text-decoration none
    color $medium

img
    border none

/**
 * Hide only visually, but have it available for screen readers:
 * http://snook.ca/archives/html_and_css/hiding-content-for-accessibility
 */
.hidden-visually
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

h1, h2, h3, h4, strong
    font-weight 600
    color $dark

code, pre
    font-family $code-font
    font-size $code-font-size
    background-color $codebg
    -webkit-font-smoothing initial
    -moz-osx-font-smoothing initial

code
    color #e96900
    padding 3px 5px
    margin 0 2px
    border-radius 2px
    white-space nowrap

em
    color $light

p
    word-spacing 0.05em

iframe
    border 0

.btn
    border 0
    cursor pointer
    font inherit

.copy__wrap
    max-width 700px
    margin 40px

.nav, .subnav
    list-style-type none

.copy
    a
        border-bottom 1px solid rgba(53,196,232,0.25)
        color hsl(192, 80%, 40%);
        &:hover
            border-bottom-color rgba(53,196,232,0.75)
            color hsl(192, 80%, 56%);
    a.button
        font-size .9em
        color #fff
        margin .2em 0
        width 180px
        text-align center
        padding 12px 24px
        display inline-block
        vertical-align middle
    img
        max-width 100%
    span.light
        color $light
    span.info
        font-size .85em
        display inline-block
        vertical-align middle
        width 280px
        margin-left 20px
    h1
        margin 0
    h2
        margin 2em 0 .8em
        padding-bottom .7em
        border-bottom 1px solid $border
    h3
        margin 2em 0 1.2em
        position relative
    figure, p, ul, ol
        margin 15px 0
    p, ul, ol
        line-height 1.6em
    ul, ol
        padding-left 1.5em
    blockquote
        margin 2em 0
        padding-left 20px
        border-left 4px solid $green
        p
            font-weight 600
            margin-left 0
    iframe
        margin 1em 0
    p.tip
        padding 12px 24px 12px 30px
        margin 2em 0
        border-left 4px solid $red
        background-color $codebg
        position relative
        border-bottom-right-radius $radius
        border-top-right-radius $radius
        &:before
            position absolute
            top 14px
            left -12px
            background-color $red
            color #fff
            content "!"
            width 20px
            height 20px
            border-radius 100%
            text-align center
            line-height 20px
            font-weight bold
            font-size 14px
    ul
        list-style disc
        margin-left 1em
        padding-left 1em
    ol
        list-style decimal
        margin-left 1em
        padding-left 1em
    ol ol
        list-style circle
