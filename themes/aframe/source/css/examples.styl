// Use this version if adding to right block
.credits
    background url(../images/mozvr-white.svg) 45% 60% no-repeat
    background-size 80% 80%
    position absolute
    bottom 0
    right 0
    height 50px
    width 90px
    margin 0px 20px 20px
    &:hover
        background-color rgba(0,0,0,0.1)


.section-title
    display none

h3 + .examples-subnav
    margin-top 4px

.btn-index
    color rgba(255,255,255,1)

.content--index
    // This extends styles in `_common`.
    flex-direction row
    .aframe-animation
        background-color #24CAFF
        position relative
        width 65%
    .copy__wrap
        width 35%
        min-width 440px
    .slogan
        color #fff
        font-size 2rem
        font-weight 300
        line-height 1.2
        letter-spacing -0.05rem
        // text-transform uppercase
    .intro
        color #fff
        font-size 1.4rem
        font-weight 300
        line-height 1.4

.menu
    margin-bottom 60px

.menu-item
    display inline-block
    a
        font-family $code-font
        text-transform uppercase
        color rgba(0,0,0,0.75)
        margin-right 20px
        border none
    a:hover
        color rgba(0,0,0,1)
        background-color rgba(0,0,0,0.02)
        border-bottom 1px solid rgba(0,0,0,0.5)

.get-started
    background-color white
    border 3px solid white
    color #000
    display inline-block
    font 300px 15px $mono-font
    letter-spacing 0.05rem
    text-align center
    transition 0.05s ease-in
    text-transform uppercase
    padding 8px 30px
    margin-top 2rem
    &:hover
        background-color white
        // border 3px solid #000
        color $pink
    &:active
        opacity 0.8

.mobile-get-started
    display none


@media screen and (max-width: 399px)
    #logo
        max-width 40vw

@media screen and (min-width: 480px)
    .example__viewsource
        top 20px
        right 20px

@media screen and (min-width: 800px)
    .example__viewsource
        top 30px
        right 30px

@media screen and (max-width: 800px)
    .mobile-get-started
        display inline-block
        position absolute
        padding 4px 5vw
        margin-top 0
        right 20px
        top 20px

    .main
        height auto
        flex-direction column

    .example__iframe
        height calc(100vh - 150px)

    .sidebar,
    .sidebar__wrap
        height 150px
        overflow-x hidden

    .sidebar
        order 1  // Move to bottom
        padding 0
        position relative
        max-width 100%
        width 100%

        .nav
            border 0
            margin-bottom 0
            padding 20px 0 0

    .example-nav
        position absolute
        height 80px
        bottom 0
        left 0
        width 100%

    #logo
        display block
        height 35px
        pointer-events none

    .logo__wordmark
        background-position 0 50%
        background-size contain
        width 100%

    .example-nav-link
        border 0
        height 100%
        font-size 2rem
        font-weight 600
        width 50%
        margin 0
        padding 0.5rem 16px
        position absolute
        bottom 0
        span
            display none

    .example-nav-prev
        left 0

    .example-nav-next
        right 0

    .subnav-item.current
        padding 0.5rem 2rem
        position absolute
        top 75px
        left 0
        right 0
        pointer-events none
        text-align center
        width 100%
        .subnav-link
            font-size 1.4rem

    .subnav-item:not(.current),
    .page-title
        display none

    .examples-list
        border 0
        padding 0

    .example-nav
        margin-top 0
