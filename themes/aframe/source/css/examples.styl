@import "_common"

// For Home / Examples pages

body
    color #fff

a
    border-bottom 1px solid rgba(255,255,255,0.15)
    color rgba(255,255,255,0.5)
    text-decoration none
    &:hover
        border-bottom-color rgba(255,255,255,0.3)
        color rgba(255,255,255,0.75)
    &:active,
    &.click
        border-bottom-color rgba(255,255,255,0.5)
        color #fff

ul
    list-style-type none

// Extends `_common` styles.
.logo__wordmark
    background url(../images/aframe-name-white.svg) no-repeat

.sidebar
    background $pink
    -webkit-overflow-scrolling touch
    -ms-overflow-style none
    width 260px
    &::-webkit-scrollbar
        width: 0 !important
    .page-title
        font-size 15px
        color rgba(0,0,0,.6)
        font-weight 100
        font-family $mono-font
        letter-spacing 0.02em

.example__iframe
    height 100vh
    width 100%
    background-color #ECECEC

.examples-list
    border-top 1px dashed $white
    padding-top 20px

.main
    background $pink
    display flex
    height 100%

.sidebar, .content
    position relative

.sidebar
    max-width 400px
    overflow-x hidden

// TODO: Figure out how to hide this scrollbar later. I've done it before.
.sidebar__wrap
    height 100vh
    position relative
    overflow-y auto

.content
    flex 1
    overflow-y auto
    display flex
    flex-direction column

.example__viewsource
    background rgba(0,0,0,0.35)
    color #fff
    display block
    font 12px/1.5 $mono-font
    padding 5px 10px
    position absolute
    text-transform uppercase
    top 5px
    right 5px
    z-index 2
    &:active,
    &:hover
        background-color #ef2d5e

.page__title
    font 600 36px/1.3 $body-font

.docs-section-title
    // padding-left 15px
    position relative
    &:before
        background url(../images/caret.svg) -3px 0 no-repeat
        background-size contain
        // content ""
        position absolute
        top 1px
        height 10px
        left 0
        width 10px

.section-active:before
    transform rotate(90deg)
    top 4px
    left -3px

.subnav-link
    font-size 16px
    font-weight 300
    // border-bottom 1px solid rgba(255,255,255,.1)
    margin-left -3px
    padding 2px 4px 2px 3px
    display block
    transition 0.05s color ease-in
    color #fff
    width 100%
    &:hover
        background-color rgba(0,0,0,0.05)
        // border-bottom 1px solid rgba(255,255,255,.2)
        color #fff
    &:active,
    &.click
        background-color rgba(0,0,0,0.5)
    &.current,
    &.current:hover
        // background-color rgba(255,255,255,0.1)
        font-weight 500;
        color #fff

.example-nav
    margin-top 3rem

.example-nav-link
    border 0
    height 100%
    font-size 2rem
    font-weight 600
    display inline-block
    padding 0.5rem 1rem
    margin -0.5rem -1rem
    width 50%
    span
        display none

.example-nav-next
    text-align right

