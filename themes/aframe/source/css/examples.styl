// Use this version if adding to right block
.credits
    background url(../images/mozvr-white.svg) 45% 60% no-repeat
    background-size 80% 80%
    position absolute
    bottom 0
    right 0
    height 50px
    width 90px
    margin 0px 20px 20px
    &:hover
        background-color rgba(0,0,0,0.1)


.section-title
    display none

h3 + .examples-subnav
    margin-top 4px

.btn-index
    color rgba(255,255,255,1)

.content--index
    // This extends styles in `_common`.
    flex-direction row
    .aframe-animation
        background-color #24CAFF
        position relative
        width 65%
    .copy__wrap
        width 35%
        min-width 440px
    .slogan
        color #fff
        font-size 2rem
        font-weight 300
        line-height 1.2
        letter-spacing -0.05rem
        // text-transform uppercase
    .intro
        color #fff
        font-size 1.4rem
        font-weight 300
        line-height 1.4

.menu
    margin-bottom 60px

.menu-item
    display inline-block
    a
        font-family $code-font
        text-transform uppercase
        color rgba(0,0,0,0.75)
        margin-right 20px
        border none
    a:hover
        color rgba(0,0,0,1)
        background-color rgba(0,0,0,0.02)
        border-bottom 1px solid rgba(0,0,0,0.5)

.get-started
    background-color white
    border 3px solid white
    color #000
    display inline-block
    font 300px 15px $mono-font
    letter-spacing 0.05rem
    text-align center
    transition 0.05s ease-in
    text-transform uppercase
    padding 8px 30px
    margin-top 2rem
    &:hover
        background-color white
        // border 3px solid #000
        color #000
