// Font faces
$body-font = Fira Sans, Helvetica Neue, Arial, sans-serif
$logo-font = $body-font
$code-font = Fira Mono, Andale Mono, Monaco, Courier, monospace
$mono-font = $code-font

// Font sizes
$body-font-size = 15px
$code-font-size = .8em

// Colors
$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$green  = #42b983
$green-dark = darken(#42b983, 25%)
$border = #ddd
$border-dark = #bbb
$codebg = #f8f8f8
$red = #f66
$white = #fff
$pink = rgb(239,45,94)

$copy-link = rgba(0,155,155,0.5)
$copy-link-hover = rgba(0,100,100,0.75)


// Miscellaneous
$radius = 2px
